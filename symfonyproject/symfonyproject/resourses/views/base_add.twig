{% extends 'templates/app.twig' %}
    {% block title %}
      {{title}}
    {% endblock %}

    {% block page_title %}
        {{title}}
    {% endblock %}

    {% block content %}



        {% if success %}
        <div class="row col-sm-12 col-md-12">

            <div class="alert alert-success" role="success">

            {{success}}

            </div>

        </div>

    {% endif %}

    {% if error %}
        <div class="row col-sm-12 col-md-12">

            <div class="alert alert-danger" role="error">

                {{error}}

            </div>

        </div>

    {% endif %}

    <form class="form-horizontal form" id="form" action="" method="post" enctype="multipart/form-data">

      {% if updateAttrutesName %}

              {% for itemkey,itemValue in updateAttrutesName %}

                  {% set items = itemValue |split(':') %}

                  {% if itemValue == 'active' %}

                      <div class="form-group form-group-lg">
                          <label class="control-label col-sm-2">{{itemkey}}</label>
                          <div class="col-sm-10 col-md-6">
                              <select class="form-control" name="{{items[0]}}">
                                  <option value="1">Enable</option>
                                  <option value="0">Disable</option>
                              </select>
                          </div>
                      </div>

                  {% endif %}


                  {% if itemValue != 'active' %}

                      {% if items[1] == 'select' %}

                          <div class="form-group form-group-lg">
                              <label class="control-label col-sm-2">{{itemkey}}</label>
                                  <div class="col-sm-10 col-md-6">
                                      <select class="form-control" name="{{ items[0] }}">
                                          {% for itemkey,itemValue in options %}
                                              <option value="{{ itemkey }}">
                                                  {{ itemValue }}
                                              </option>
                                          {% endfor %}
                                      </select>
                                  </div>
                          </div>
                      {% else %}

                          <div class="form-group form-group-lg">
                              <label class="control-label col-sm-2">{{itemkey}}</label>
                              <div class="col-sm-10 col-md-6">
                                  <input class="form-control"
                                         data-validation="required"
                                         type="{{ items[1] }}"
                                         name="{{items[0]}}"
                                         placeholder="Enter your {{itemkey}}" {{items[2]}}>
                              </div>
                          </div>
                      {% endif %}
                  {% endif %}

              {% endfor %}



          <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-10">

                      <a class="btn btn-default btn-lg" href="javascript:history.back()">Back</a>

                      <input class="btn btn-default btn-lg" type="submit" value="Submit" >

                  </div>
          </div>
      {% endif %}
    </form>

    <script type="text/javascript">
    </script>
{% endblock %}
